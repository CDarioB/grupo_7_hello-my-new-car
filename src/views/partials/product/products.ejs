<!DOCTYPE html>
<html lang="en">
    <%-include('../head.ejs') %>
    <title>Crear producto</title>
</head>
<%-include('../header.ejs') %>
<body>
    <main>
        <%-include('./offers.ejs')%>
        
        <h2 class="title">Sin Descuento</h2>
        <section class="main-ofert">
            <% for(var i = 0; i < products.length; i++) { %>
                <% if (products[i].prd_discount_Percentage == 0) { %>
                    <article class="main-ofert-article">
                        <img src= <%=products[i].prd_img[0].img_fileName%> alt="">
                            <div class="main-article-content">
                            <p class="main-article-title"> <%=products[i].prd_references%></p>
                            <p class="main-article-description">2016 - 70.000km - Buenos Aires</p>
                            <div>
                                <p class="main-price">$<%=products[i].prd_price%></p>
                                <p class="main-discount"><%=products[i].prd_discount_Percentage%>%</p>
                                <p class="main-discountprice">$<%=products[i].prd_discountprice%></p>
                                <form action="/products/delete/<%=products[i].prd_id%>?_method=DELETE" method="POST" style="display: inline-flex ;margin-top: 2px;">
                                    <button type="submit" class="btn btn-outline-danger btn-block">Eliminar</button>
                                </form>
                                <a href="/products/detail/<%=products[i].prd_id%>"> Ver m√°s <br></a>
                            </div>
                        </div>
                    </article>
                <% } %>
            <% } %>
        </section>

        <%-include('../brands.ejs')%>
        
    </main>
    
</body>

<%-include('../footer.ejs') %>
</html>