<!DOCTYPE html>
<html lang="en">
<%-include('../head.ejs') %>
    <title>Lista de autos</title>
    </head>
    <%-include('../header.ejs')%>

        <body>
            <main>
                <h2 class="title">Listado de autos</h2>
                <section class="main-ofert">
                    <% for(var i = 0; i < products.length; i++) { %>
                        <% { %>
                            <article class="main-ofert-article">
                                <img src="/img/<%=products[i].img[0]%>" alt="">
                                    <div class="main-article-content">
                                    <p class="main-article-title"> <%=products[i].references%></p>
                                    <p class="main-article-description"><%=products[i].model +' - '+products[i].mileage+'km'+' - '+products[i].province.province%></p>
                                    <div>
                                        <p class="main-price">$<%=products[i].price%></p>
                                        <p class="main-discount"><%=products[i].discount_percentage%>%</p>
                                        <p class="main-discountprice">$<%=products[i].discount_price%></p>
                                        <a href="/products/edit/<%=products[i].id%>" class="boton-modificar"> Editar <br></a>
                                        <form action = "/products/delete/<%=products[i].id%>" method="POST">
                                            <button type ="submit">Borrar</button>
                                        </form>
                                    </div>
                                </div>
                            </article>
                        <% } %>
                    <% } %>
                </section>
                <%-include('../brands.ejs')%>

            </main>

        </body>

        <%-include('../footer.ejs') %>

</html>